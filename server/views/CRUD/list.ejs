<!DOCTYPE html>
<html>
    <head>
        <!-- Bootstrap 5.3.2 CDN -->
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <title><%= title %></title>
        <meta charset="UTF-8">
    </head>
    <body>
        <main class="container">
            <title><%=title%></title>  
            <a href="/list/add" class="btn btn-success btn-sm">Add new</a> <!-- Add new assignment button -->
            <div class="row">
                <div class="col-md-12">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <!--Table header-->
                        <tr class="d-flex">
                            <th class="text-center col-1">Class</th>
                            <th class="text-center col-3">Name</th>
                            <th class="text-center col-1">Due Date</th>
                            <th class="text-center col-3">Notes</th>
                            <th class="text-center col-1">Mark</th>
                            <th class="text-center col-1">Weight</th>
                            <th class="text-center col-2">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- For loop to create the appropriate amount of rows corresponding to the total number of entries -->
                        <% for(let count=0;count<AssignList.length;count++) { %>     
                        <tr class="d-flex" onclick="location.href='/list/view/<%= AssignList[count]._id %>';">
                            <td class="text-center col-1"><%= AssignList[count].class %></td>
                            <td class="text-center col-3"><%= AssignList[count].name %></td>
                            <td class="text-center col-1"><%= AssignList[count].due %></td>
                            <td class="text-center col-3">View notes <%= AssignList[count].notes %></td>
                            <td class="text-center col-1"><%= AssignList[count].mark %></td>
                            <td class="text-center col-1"><%= AssignList[count].weight %></td>
                            <td class="text-center col-2"> 
                                <a href="/list/delete/<%= AssignList[count]._id %>" 
                                    class="btn btn-danger btn-sm"> Delete
                                </a>
                                <a href="/list/edit/<%= AssignList[count]._id %>" 
                                    class="btn btn-warning btn-sm"> Edit
                                </a>  
                            </td>   
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <script src="../javascripts/script.js"></script> <!-- For this stupid button that didn't want to work-->
            </div>
            </div>
        </main>
    </body>
</html>